<?xml version="1.0" encoding="utf-8"?>
<sleepchild.view.ContainerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pluto">

    <LinearLayout
        android:id="@+id/activity_main_appmain"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AuPod"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/activity_main_btn_search"
                android:onClick="onClick"
                android:orientation="vertical"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <ImageView
                    android:clickable="false"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_search_white_moss"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_main_btn_showsettings"
                android:onClick="onClick"
                android:orientation="vertical"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:clickable="false"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/ic_settings"/>

            </LinearLayout>

        </LinearLayout>

        <!-- tab view --> 
        <sleepchild.view.tabview.TabView
            android:id="@+id/activity_main_tabview1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_marginBottom="5dp"/>

        <sleepchild.view.RoundedLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ffffff"
            fx:radius="10dp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:onClick="showFullPlayer"
                android:id="@+id/activity_main_iv_currentimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/fallback_cover"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:onClick="showFullPlayer"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:id="@+id/activity_main_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textStyle="italic"
                        android:textSize="19sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/activity_main_tv_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="#4B4B4B"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/activity_main_btn_playpause"
                        android:onClick="onClick">

                        <ImageView
                            android:id="@+id/activity_main_iv_playpause"
                            android:clickable="false"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/ic_play"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/activity_main_btn_next"
                        android:onClick="onClick">

                        <ImageView
                            android:clickable="false"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/ic_next"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </sleepchild.view.RoundedLinearLayout>

    </LinearLayout>
    
    <sleepchild.view.RoundedLinearLayout
        android:id="@+id/activity_main_searchpanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:clickable="true"
        android:visibility="gone">
        
        <EditText
            android:id="@+id/activity_main_search_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:hint="search title, artist or album"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColorHint="#B5B5B5"
            android:textColor="#000000"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CECECE"/>
        
        <ListView
            android:id="@+id/activity_main_search_list8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
           
    </sleepchild.view.RoundedLinearLayout>
    
</sleepchild.view.ContainerLayout>
